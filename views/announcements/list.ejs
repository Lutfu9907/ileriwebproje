<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Duyurular</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <h1>Duyurular</h1>

    <ul class="list-group">
      <% announcements.forEach((announcement) => { %>
      <li class="list-group-item">
        <h2 class="mb-2"><%= announcement.title %></h2>
        <p><%= announcement.content %></p>
        <p>Gösterim Tarihi: <%= formatDate(announcement.startDate) %></p>
        <p>Bitiş Tarihi: <%= formatDate(announcement.endDate) %></p>
        <a href="/announcements/<%= announcement._id %>/edit" class="btn btn-primary">Düzenle</a>
      </li>
      <% }) %>
    </ul>

    <a href="/announcements/create" class="btn btn-success">Yeni Duyuru Ekle</a>
    <br>
    <br>
    <a href="/users/logout" class="btn btn-danger">Hesaptan Çıkış Yap</a>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
